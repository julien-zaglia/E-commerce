<table class="table text-center">

    <thead>
        <tr>
            {% for colonne in colonnes %}
                <th>{{colonne|capitalize }}</th>
            {% endfor %}
                <th>Voir</th>
                 <th>Modifier</th>
        </tr>
    </thead>
    <tbody>
    {% for produit in produit %}
        
    
        <tr>
                <td> {{ produit.id}} </td>
                <td> {{ produit.nom}}  </td>
                <td> {{ produit.description}}  </td>
                <td> {{ produit.prix}} â‚¬ </td>
                <td><img class="img-thumbnail" style="max-height: 100px; max-width:100px;" src="{{ asset('images/produits/'~ produit.image )}}" alt=""></td>
                <td>
                    <a href=" {{ path('show', {id: produit.id})}}" class="text-decoration-none"> 
                    <i class="fa fa-eye text-dark"> </i></a>
                </td>
                <td>
                    <a href=" {{ path('edit_produit', {id: produit.id})}}" class="text-decoration-none">  
                    <i class="fa fa-pen text-dark"> </i></a>
                </td>
        </tr>

    {% endfor %}
    </tbody>
</table>
{% endblock %}